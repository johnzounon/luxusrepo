{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Title_fr</th>
                <td>{{ product.titleFr }}</td>
            </tr>
            <tr>
                <th>Title_de</th>
                <td>{{ product.titleDe }}</td>
            </tr>
            <tr>
                <th>Title_it</th>
                <td>{{ product.titleIt }}</td>
            </tr>
            <tr>
                <th>Short_description_fr</th>
                <td>{{ product.shortDescriptionFr }}</td>
            </tr>
            <tr>
                <th>Short_description_de</th>
                <td>{{ product.shortDescriptionDe }}</td>
            </tr>
            <tr>
                <th>Short_description_it</th>
                <td>{{ product.shortDescriptionIt }}</td>
            </tr>
            <tr>
                <th>Description_fr</th>
                <td>{{ product.descriptionFr }}</td>
            </tr>
            <tr>
                <th>Description_de</th>
                <td>{{ product.descriptionDe }}</td>
            </tr>
            <tr>
                <th>Description_it</th>
                <td>{{ product.descriptionIt }}</td>
            </tr>
            <tr>
                <th>Is_visible</th>
                <td>{{ product.isVisible ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ product.updatedAt ? product.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Sale_price</th>
                <td>{{ product.salePrice }}</td>
            </tr>
            <tr>
                <th>Is_sale_price</th>
                <td>{{ product.isSalePrice ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_product_index') }}">back to list</a>

    <a href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
